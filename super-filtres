    <div class="container">
        <h1>üé® √âditeur d'Images avec Filtres</h1>
        
        <div class="upload-section">
            <button class="upload-btn" onclick="document.getElementById('fileInput').click()">
                üìÅ Charger une image
            </button>
            <input type="file" id="fileInput" accept="image/*">
        </div>

        <div class="editor-area">
            <div class="filters-panel">
                <div class="filter-category">
                    <h3>üé≠ Basiques</h3>
                    <button class="filter-btn" onclick="applyFilter('grayscale')">Noir et Blanc</button>
                    <button class="filter-btn" onclick="applyFilter('sepia')">S√©pia</button>
                    <button class="filter-btn" onclick="applyFilter('invert')">N√©gatif</button>
                    <button class="filter-btn" onclick="applyFilter('brightness')">Luminosit√©++</button>
                    <button class="filter-btn" onclick="applyFilter('darkness')">Obscurit√©</button>
                    <button class="filter-btn" onclick="applyFilter('contrast')">Contraste++</button>
                </div>

                <div class="filter-category">
                    <h3>üéÆ R√©tro Gaming</h3>
                    <button class="filter-btn" onclick="applyFilter('gameboy')">Game Boy</button>
